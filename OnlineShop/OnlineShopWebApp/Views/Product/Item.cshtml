@model ProductViewModel

@{
    ViewData["Title"] = @Model.Name;
}

<h3>@Model.Name</h3>
<h3>@Model.Cost @Constants.Rub </h3>
<h5>@Model.Description </h5>
<p>
    Here will be a proper <br>
    item description.
</p>

<div class="col-4 card">
    <img class="card-img-top" src="@Model.ImagePath" />
    <a class="btn btn-outline-light btn-sm" role="button"
       asp-area=""
       asp-controller="Home"
       asp-action="Index">
        Back to catalog
    </a>
    <a class="btn btn-outline-warning btn-sm" role="button"
       asp-area=""
       asp-controller="Cart"
       asp-action="Add"
       asp-route-productId="@Model.Id">
        Add to Cart
    </a>

    <a class="btn btn-outline-warning btn-sm" role="button"
       asp-area=""
       asp-controller="Scene"
       asp-action="Index">
        Magic
    </a>




</div>

<div class="col-8">

    @* https://threejs.org/docs/index.html#manual/en/introduction/Creating-a-scene *@
</div>

<div class="col-lg-8 col-md-8">
    <div id="Scene"></div>


</div>