@model Product

@{
    ViewData["Title"] = @Model.Name;
}

<h3>@Model.Name</h3>
<h3>@Model.Cost rub </h3>
<h5>@Model.Description </h5>
<p>
    Here will be a proper <br>
    item description.
</p>

<div class="col-4 card">
    <img class="card-img-top" src="@Model.ImagePath" />
    <a class="btn btn-outline-light btn-sm" href="/home/" role="button">Back to catalog</a>
    <a class="btn btn-outline-warning btn-sm" href="/cart/add?productId=@Model.Id" role="button">Add to Cart</a>
</div>


