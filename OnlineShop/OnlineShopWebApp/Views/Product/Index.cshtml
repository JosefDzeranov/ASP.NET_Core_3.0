@model ProductViewModel

<div class = "row">
    <div class="col-6">
	    <img class= "card-img-top" src="@Model.ImagePath" alt = "Изображение товара"/> 
	    @foreach (var ImagePath in Model.ImagesPath)
	    {
		    <div style="padding: 4px">
			    <img src="@ImagePath" width="150" height="150"/>
		    </div>
	    }
    </div>

    <div class="col-6">
        <h5>@Model.Name</h5>
        <h5>@Model.Cost руб</h5>
        <h5>@Model.Description</h5>
        <a class="btn btn-dark" href ="/home/index" role = "button">Продолжить покупки</a>
        <a class="btn btn-dark" href = "/cart/add?productId=@Model.Id" role = "button">Добавить в корзину</a>
    </div>
   </div>

