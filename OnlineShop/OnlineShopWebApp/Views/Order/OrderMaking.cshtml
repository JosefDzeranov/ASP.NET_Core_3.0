@using OnlineShopWebApp.Models

@model Customer

@{
    ViewBag.Title = "Страница оформления заказа";
}
<h2 align="center">Оформление заказа</h2>
@using (Html.BeginForm())
    @Html.DisplayForModel()
    @Html.AntiForgeryToken()
    <div class="form-horizontal" align="center">
        <form method="post" asp-action="Create">
        <h5>Введите контактные сведения для оформления заказа</h5>
        <hr />
        <div class="form-group" asp-for="model.LastName">
            @Html.Label("Фамилия")
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)

            </div>
            @Html.Label("Имя")
            <div class="col-md-10" asp-for="model.Name">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group" asp-for="model.Mail">
            @Html.Label("Эл.почта")
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mail)
                @Html.ValidationMessageFor(model => model.Mail)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Адрес")
            <div class="col-md-10" asp-for="model.Address">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>
        </form>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-dark" href="/order/add/?lastname=model.LastName&?name=model.Name&?mail=model.Mail&?adress=model.Address"*@ value="Оформить заказ" type="button" align="center" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Назад в корзину", "Index")
    </div>