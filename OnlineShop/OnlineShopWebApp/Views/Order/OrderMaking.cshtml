@using OnlineShopWebApp.Models

@model Order

@{
    ViewBag.Title = "Страница оформления заказа";
}
<h2 align="center">Оформление заказа</h2>
@using (Html.BeginForm())
    @Html.DisplayForModel()
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    <div class="form-horizontal" align="center">
        <form method="post" asp-action="Create">
        <h5>Введите контактные сведения для оформления заказа</h5>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group" asp-for="@Model.LastName">
            @Html.Label("Фамилия")
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)

            </div>
            @Html.Label("Имя")
            <div class="col-md-10" asp-for="@Model.Name">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group" asp-for="@Model.Mail">
            @Html.Label("Эл.почта")
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mail)
                @Html.ValidationMessageFor(model => model.Mail)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Адрес")
            <div class="col-md-10" asp-for="@Model.Address">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>
        </form>
    </div>
    <div class="form-group">
            @*@Html.Action("Index","Order")*@
        <div class="col-md-offset-2 col-md-10">
            <input class="btn btn-dark" href="#" @*href="/order/add/?userId=@Model.UserId&?lastname=@Model.LastName&?name=@Model.Name&?mail=@Model.Mail&?adress=@Model.Address"*@ value="Оформить заказ" type="button" align="center" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Назад в корзину", "Index")
    </div>