@using OnlineShop.Db
@using OnlineShopWebApp.Models

@model OrderFormViewModel

@{
    ViewData["Title"] = "Заказы";
}

<div class="container">
    <h2>Заказ</h2>
    <div class="row">
        <div class="col-3">
            <h5>Ваш заказ:</h5>
            @foreach (var item in @Model.Cart.Items)
            {
                <p>@item.Product.Name (@item.Count) - @item.Cost руб.</p>
            }
            <h6>Total: @Model.Cart.Amount руб.</h6>
        </div>
        <form method="post" asp-action="Add" asp-controller="Order">
            <div class="validation" asp-validation-summary="All"></div>
            <h5>Заполните информацию по заказу:</h5>
            <p>Адрес:</p>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="UserDeliveryInfo.Address.ZipCode" placeholder="Индекс"/>
                <span asp-validation-for="UserDeliveryInfo.Address.ZipCode"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="UserDeliveryInfo.Address.Country" placeholder="Страна"/>
                <span asp-validation-for="UserDeliveryInfo.Address.Country"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="UserDeliveryInfo.Address.City" placeholder="Город"/>
                <span asp-validation-for="UserDeliveryInfo.Address.City"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="UserDeliveryInfo.Address.Street" placeholder="Улица"/>
                <span asp-validation-for="UserDeliveryInfo.Address.Street"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="UserDeliveryInfo.Address.House" placeholder="Дом"/>
                <span asp-validation-for="UserDeliveryInfo.Address.House"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" asp-for="UserDeliveryInfo.Address.Apartment" placeholder="Квартира_помещение"/>
                <span asp-validation-for="UserDeliveryInfo.Address.Apartment"></span>
            </div>
            <p>Контактные сведения:</p>
            <div class="mb-3">
                <input class="form-control form-control-sm" type="tel" asp-for="UserDeliveryInfo.Phone" placeholder="Телефон"/>
                <span asp-validation-for="UserDeliveryInfo.Phone"></span>
            </div>
            <div class="mb-3">
                <input class="form-control form-control-sm" type="email" asp-for="UserDeliveryInfo.Email" placeholder="Эл.почта"/>
                <span asp-validation-for="UserDeliveryInfo.Email"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-dark btn-sm text-nowrap mt-3" type="submit" asp-controller="Order" asp-action="Add" placeholder="Оформить">
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            <a class="btn btn-outline-dark btn-sm text-nowrap" href="/" role="button">Продолжить</a>
        </div>
    </div>
</div>