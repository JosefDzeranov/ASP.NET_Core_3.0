@model List<ProductViewModel>
@if (Model.Count == 0)
{
    <h2>В Вашем избранном ничего нет</h2>
}
else
{
<h1><b>Ваше избранное:</b></h1>
<div class="row">

    @foreach (var product in Model)
    {

        <div class="col card shadow">
            <img class="card-img-top" src="https://cdnn1.img.sputniknews-uz.com/img/07e5/0a/13/20963736_0:100:1921:1180_1920x0_80_0_0_929d0b965b3dabf775b39cd28895d319.jpg">

            <div class="card-body">
                <a style="color:black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost rub.</h5>
                <a class="btn btn-dark" href="/cart/addtocart/@product.Id" role="button">добавить в корзину</a>
                <br />
                <br /> <a class="btn btn-dark" href="/comparison/addtocompare/@product.Id" role="button">сравнить</a>
            </div>

        </div>

    }

</div>
}



