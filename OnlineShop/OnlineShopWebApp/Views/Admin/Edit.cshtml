@model Product

<form method="post">
    <div class="row">
        @await Html.PartialAsync("AdminPanel")
        <div class="col text-center">
            <h3>Реадктировать информацию об услуге</h3>
            <input type="hidden" name="id" value="@Model.Id"/>
            <label>Название</label>
            <input type="text" name="name" value="@Model.Name" />
            <br />
            <label>Цена</label>
            <input type="text" name="cost" value="@Model.Cost" />
            <br />
            <label>Описание</label>
            <input type="text" name="description" value="@Model.Description" />
            <br />
            <button class="btn btn-dark" type="submit" asp-controller="Admin" asp-action="SaveEditedProduct" asp-route-productId="@Model.Id">Сохранить</button>
        </div>
    </div>
</form>