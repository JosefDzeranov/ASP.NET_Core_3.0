<div class="row">
    @await Html.PartialAsync("AdminPanel")

    <div class="col-9">
        <div class="form-group">
            <input type="text" name="name" class="form-control" placeholder="Name">
        </div>

        <div class="form-group">
            <input type="text" name="cost" class="form-control" placeholder="Cost">
        </div>

        <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="Description">
        </div>

        <div>
            <label class="form-label" for="customFile">Add product main picture</label>
            <input type="file" class="form-control" id="customFile" />
        </div>

        <div>
            <a class="btn btn-outline-success btn-sm" href="#" role="button">Add product</a>
        </div>
    </div>
</div>
