@model Product

<form method="post">

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <input type="hidden" name="Id" value="@Model?.Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Название</label>
        <input class="form-control" asp-for="Name" value="@Model?.Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Цена</label>
        <input type="number" class="form-control" asp-for="Price" value="@Model?.Price" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Описание</label>
        <input class="form-control" asp-for="Description" value="@Model?.Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-controller="Admin" asp-action="Edit">Сохранить</button>
</form>