@model Product

<div class="validation" asp-validation-summary="ModelOnly"></div>

<div>Create new Product.</div>

<div class="form-group">
    <label asp-for="Name">Name</label>
    <input asp-for="Name" class="form-control" placeholder="Name" />
    <span asp-validation-for="Name"></span>
</div>

<div class="form-group">
    <label asp-for="Cost">Password</label>
    <input type="number" asp-for="Cost" class="form-control" placeholder="Cost" />
    <span asp-validation-for="Cost"></span>
</div>

<br />
<div>
    <button class="btn btn-outline-success btn-sm" type="submit" asp-controller="Admin" asp-action="AddProduct">Add Product</button>
</div>