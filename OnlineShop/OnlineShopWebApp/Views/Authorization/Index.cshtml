<form method="post">
    <h5>
        Вход
    </h5>
    <div>

        <input type="email" name="login" placeholder="Логин" required/> <br />
        <input type="text" name="password" placeholder="Пароль" required/> <br />

    </div>
    <div>
        <input type="checkbox" name="isRemembered" typeof="bool" value="true" /> Запомнить меня? <br />
        <button class="btn btn-dark" type="submit" asp-controller="Authorization" asp-action="Enter">Войти</button> <br />
        <a class="text-dark" href="/registration/index" role="button">Регистрация нового пользователя</a> <br />
    </div>
   
    

</form>