<form method="post">
    <div class="container align-content-center">
        <div class="row text-center">
            <div class="col-4 mx-auto">
                <h2>Авторизируйтесь</h2>
                <div class="mb-3">
                    <input class="form-control" type="text" name="name" placeholder="Введите имя">
                </div>
                <div class="mb-3">
                    <input class="form-control" type="password" name="password" placeholder="Введите пароль">
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="true" name="rememberme">
                    <label class="form-check-label">
                        Запомнить меня?
                    </label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark" asp-controller="Authorization" asp-action="Authorize">Войти</button>
                </div>
                <div class="mb-3">
                    <a href="/registration/index">Регистрация нового пользователя</a>
                </div>
            </div>
        </div>
    </div>
</form>