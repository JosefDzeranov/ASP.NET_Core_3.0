@model List<Product>

@if (Model.Count == 0)
{
    <h1>"Корзина пуста"</h1>

}
else
{
    <table>
        <tr>
        <thead> Наименование</thead>
        <thead>Количество</thead>
        <thead>Стоимость</thead>
        </tr>


        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Number</td>
                <td>@product.TotalCost</td>

            </tr>

        }
        <tr>
            <td>Сумма корзины:</td>
            <td>@Cart.GetCartCost()</td>
        </tr>
    </table>
    <p>
        <a class="btn btn-dark" href="#" role="button">Оформить заказ</a>
    </p>
}
