@model Cart

@if (Model == null || Model.Items.Count == 0)
{
    <div class="text-center">
        <h5>В корзине еще нет товаров, перейдите на <a href="/home/index">главную страницу</a> для добавления товара</h5>
    </div>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Цена</th> 
                        <th>Количество</th>
                        <th>Стоимость</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@item.Product.Price</td>
                            <td>@item.Amout</td>
                            <td>@item.Cost</td>
                            <td>
                                <a class="btn btn-primary" href="/cart/add?productId=@item.Product.Id" role="button">+</a>
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/cart/decreaseAmount?productId=@item.Product.Id" role="button">-</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-left">
                <h4>Итого:</h4>
                <h4>@Model.Cost</h4>
            </div>
            <div class="text-left">  
                <a class="btn btn-outline-success" href="/home/index" role="button">Продолжить покупки</a>
                <a class="btn btn-success" href="#" role="button">Перейти к оплате</a>
                <a class="btn btn-danger" href="/cart/clear" role="button">Очистить корзину</a>
            </div>
        </div>
    </div>
}
