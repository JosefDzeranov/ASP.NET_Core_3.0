@model Cart

@{
    ViewData["Title"] = "Cart";
}

@if(Model == null)
{
    <h3>Empty Cart</h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Cost, @Constants.Rub</th>
                        <th>Amount</th>
                        <th>Sum, @Constants.Rub</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Cost</td>
                        <td>@item.Amount</td>
                        <td>@item.Cost</td>
                        <td><a class="btn btn-dark btn-sm" href="#" role="button">-</a></td>
                        <td><a class="btn btn-dark btn-sm" href="#" role="button">+</a></td>
                    </tr>
                    }
                </tbody>
            </table>
            <div class="text-right">
                <h2>Total cost</h2>
                <h2>@Model.Cost</h2>
            </div>
            <div class="text-center">
                <a class="btn btn-outline-warning btn-sm" href="/home/products" role="button">Continue explore</a>
                <a class="btn btn-outline-success btn-sm" href="#" role="button">Сomplete the purchase</a>
            </div>
        </div>

    </div>
}

