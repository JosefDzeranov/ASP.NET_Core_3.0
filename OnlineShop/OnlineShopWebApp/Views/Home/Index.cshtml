@using OnlineShopWebApp.Models
@model IEnumerable<Product>



@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    @foreach (Product p in Model)
    {
        <div class="col-3 card shadow">
            <img class="card-card-img-top" src="https://poshvu.ru/img/b/170418/paltovaya-tkan-zelenogo-cveta-2-69015.jpg.c.jpg">

            <div class="card-body">
                <a style="color:black" href="/product/index/@p.Id">
                    <h5>@p.Name</h5>
                </a>
                <h5>@p.Cost руб.</h5>
                <a class="btn btn-dark" href="/cart/add?productId=@p.Id" role="button">Добавить в корзину</a>
            </div>
        </div>

    }
</div>