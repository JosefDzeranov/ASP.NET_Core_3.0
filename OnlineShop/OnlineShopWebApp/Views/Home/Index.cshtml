@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}

 <a href = "/">
    <h5>Продолжить покупки</h5>
 </a>
<div class = "row">
    @foreach(var product in Model)
    {
        <div class="col-3 card shadow">
            <img src="img/sea.jpg" alt="" class="card-img-top">
            <div class = "card-body">
                <a style = "color:black" href ="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                    </a>
                    <h5>@product.Cost руб </h5>
                    <a class = "btn btn-dark"  href="" role = "button">Добавить в корзину</a>
                    </div>
                    </div>
    }
    </div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

