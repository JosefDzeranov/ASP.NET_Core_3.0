@using OnlineShop.Db.Models

@model List<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model == null)
{
    <div class="404">
        <h2 align="center">Страница не найдена</h2>
        <img class="card-img-top" src="/images/404.jpg" />
        <h2 align="center">Такой услуги нет в списке, введите корректное значение 1-5</h2>
    </div>
}
else
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-4 card-body shadow">
                <img class="card-img-top" src=@product.ImagePath alt="Изображение услуги" />
                <div class="card-body">
                    <a style="color:black" href="/product/index/@product.Id">
                        <h4>@product.Name</h4>
                    </a>
                    <h5>Стоимость: @product.Cost рублей</h5>
                    <p>@product.Description</p>
                    <a class="btn btn-light" href="/cart/add/?productId=@product.Id" width="20px" role="button">Добавить в корзину</a>
                </div>
            </div>
        }
    </div>
}

