@model List<ProductViewModel>



@{
    ViewData["Title"] = "Home Page";

}

<form method="post">
    <div><input type="text" name="name" />
     <button class="btn btn-dark" type="submit" asp-controller="Home" asp-action="SearchByName">Искать</button>    
    </div>

</form>


<div class="row">

    @foreach (var product in Model)
    {

        <div class="col card shadow">
            @*<img class="card-img-top" src="https://cdnn1.img.sputniknews-uz.com/img/07e5/0a/13/20963736_0:100:1921:1180_1920x0_80_0_0_929d0b965b3dabf775b39cd28895d319.jpg">*@
            <img class="card-img-top" src="@product.imagePath">
            <div class="card-body">
                <a style="color:black" href="/product/index/@product.Id">
                    <h5>@product.Name</h5>
                </a>
                <h5>@product.Cost rub.</h5>
                <a class="btn btn-dark" href="/cart/addtocart/@product.Id" role="button">добавить в корзину</a>
                <br />
               <br /> <a class="btn btn-dark" href="/comparison/addtocompare/@product.Id" role="button">сравнить</a>
                <br />
                <br /><a class="btn btn-dark" href="/favorites/addtofavorites/@product.Id" role="button">в избранное</a>
            </div>

        </div>

    }

</div>




