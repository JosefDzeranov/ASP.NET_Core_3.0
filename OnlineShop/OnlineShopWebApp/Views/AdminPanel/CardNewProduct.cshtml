@model Product
@{
    ViewData["Title"] = "Редактирование товара";
}


<form method="post" asp-controller="AdminPanel" asp-action="AddNewProduct">
    <div class="was-validated" asp-validation-summary="All"></div>
    <div class="container">
        <div class="row">
            @await Html.PartialAsync("MenuAdminPanel")
            <div class="col-10 container">
                <div class="container">
                    <h3 class="display-5 Title_sile text-center">Добавление нового товара</h3>

                    <div class="card">
                        <div class="form-group p-3">
                            <label class="text-center">Шифр:</label>
                            <input type="text" class="form-control" id="Input1" placeholder="Шифр" required="" name="Name" asp-for="Name"/>
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>
                    <div class="card">
                        <div class="form-group p-3">
                            <label class="text-center">Описание:</label>
                            <input type="text" class="form-control" id="Input2" placeholder="Описание" required="" name="Description" asp-for="Description"/>
                            <span asp-validation-for="Description"></span>
                        </div>
                    </div>
                    <div class="card">
                        <div class="form-group p-3">
                            <label class="text-center">Изображение:</label> <br/>
                            <input type="text" class="form-control" id="Input3" placeholder="Изображение" required="" name="Images[0]" asp-for="Images[0]"/>
                            <span asp-validation-for="Images[0]"></span>
                        </div>
                    </div>
                    <div class="card">
                        <div class="form-group p-3">
                            <label class="text-center">Цена:</label>
                            <input type="text" class="form-control" id="Input4" placeholder="Цена" required="" name="Cost" asp-for="Cost"/>
                            <span asp-validation-for="Cost"></span>
                        </div>
                    </div>
                    <div class="card">
                        <div class="form-group p-3">
                            <label class="text-center">Длина:</label>
                            <input type="text" class="form-control" id="Input5" placeholder="Длина" required="" name="Length" asp-for="Length"/>
                            <span asp-validation-for="Length"></span>
                        </div>
                    </div>
                    <div class="card">
                        <div class="form-group p-3">
                            <label class="text-center">Ширина:</label>
                            <input type="text" class="form-control" id="Input5" placeholder="Ширина" required="" name="Width" asp-for="Width"/>
                            <span asp-validation-for="Width"></span>
                        </div>
                    </div>
                    <div class="card">
                        <div class="form-group p-3">
                            <label class="text-center">Площадь:</label>
                            <input type="text" class="form-control" id="Input5" placeholder="Площадь" required="" name="Square" asp-for="Square"/>
                            <span asp-validation-for="Square"></span>
                        </div>
                    </div>
                </div>
                <div class="col-3 p-3">
                    <button class="btn btn-light text-center" type="submit" asp-controller="AdminPanel" asp-action="AddNewProduct">Сохранить изменения</button>
                </div>
            </div>
        </div>
    </div>
</form>






