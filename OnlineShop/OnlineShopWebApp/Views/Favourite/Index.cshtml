@model List<Product>

<div class="row">
    <div class="col">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Стоимость</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-left">
            <a class="btn btn-outline-success" href="/home/index" role="button">Продолжить покупки</a>
            @foreach (var button in Model)
            {
                <a class="btn btn-success" href="/cart/add?productId=@button.Id" role="button">Добавить в корзину</a>
            }
            <a class="btn btn-danger" href="/cart/clear" role="button">Очистить избранное</a>
        </div>
    </div>
</div>
