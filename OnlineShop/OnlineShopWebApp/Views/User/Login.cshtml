<form method="post">
    <div class="row">
        <div class="col-3">

            <h3>Log-in</h3>

            <div class="form-group">
                <input type="text" name="login" class="form-control" placeholder="Name">
            </div>

            <div class="form-group">
                <input type="text" name="email" class="form-control" placeholder="Name@example.com" >
            </div>

            <div class="form-group">
                <input type="text" name="Password" class="form-control" placeholder="Password" >
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" typeof="bool" name="IsRemembered">
                <label class="form-check-label">Remember me</label>
                <br />
                <button class="btn btn-outline-success btn-sm" type="submit" asp-controller="#" asp-action="#">Login</button>
            </div>
        </div>
    </div>
</form>
