<form method="post">
    <div class="row">
        <div class="col-3">

            <h3>Log in</h3>

            <div class="form-group">
                <input type="text" name="login" class="form-control" placeholder="Login" required minlength="2" maxlength="15">
            </div>

            <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="name@example.com" required>>
            </div>

            <div class="form-group">
                <input type="password" name="Password" class="form-control" placeholder="Password" required minlength="5" maxlength="15">
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" typeof="bool" value="true" name="IsRemembered">
                <label class="form-check-label">Remember me</label>
            </div>

            <div>
                <button class="btn btn-outline-success btn-sm" type="submit" asp-controller="User" asp-action="Login">Login</button>
                <button class="btn btn-outline-danger btn-sm" type="submit" asp-controller="User" asp-action="NewUser">Create an account</button>
            </div>
        </div>
    </div>
</form>
