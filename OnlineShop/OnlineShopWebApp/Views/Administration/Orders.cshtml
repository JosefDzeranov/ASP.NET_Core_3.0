<div class="row">
    @await Html.PartialAsync("Menu")
   

    <div class="column">
        <table>
            <tr>
                <th>Список заказов</th>

            </tr>
            <tr>
                <th>N</th>
                <th>Сумма</th>
                <th>Статус</th>
                <th>Пользователь (логин)</th>
                <th>Дата</th>
                <th>Время</th>
            </tr>

            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model[i].Cart.CartCost</td>
                        <td>@Model[i].Status</td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Date.ToString("d")</td>
                        


                    </tr>
                }





            }





        </table>
    </div>
</div>