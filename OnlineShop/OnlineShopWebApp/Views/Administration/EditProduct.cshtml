@model Product
<form method="post">


    <h2>Редактирование продукта</h2>



    <input type="hidden" value=@Model.Id name="Id" />

    <p> Имя продукта:</p>
    <input type="text" name="Name" />
    <p>
        Цена:
    </p>
    <input type="text" name="Cost" />

    <p>
        Описание:
    </p>
    <input type="text" name="Description" /> <br />
    <br />
    <button class="btn btn-dark" type="submit" asp-controller="Administration" asp-action="SaveEditedProduct">сохранить изменения</button>


</form>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}