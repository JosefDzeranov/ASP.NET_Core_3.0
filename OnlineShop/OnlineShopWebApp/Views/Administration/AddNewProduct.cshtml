@model Product

<form method="post">
    <h2>Добавление нового продукта:</h2>


    <p>Введите наименование продукта:</p>
    <input type="text" name="Name" required />

    <p>Введите Id продукта:</p>
    <input type="number" name="Id" required  />

    <p>Введите цену товара:</p>
    <input type="number" name="Cost" required/>

    <p>Введите описание товара:</p>
    <input type="text" name="Description" required/> <br />
    <p></p>

    <button class="btn btn-dark" type="submit" asp-controller="Administration" asp-action="SaveAddedProduct">Добавить продукт</button>


</form>
