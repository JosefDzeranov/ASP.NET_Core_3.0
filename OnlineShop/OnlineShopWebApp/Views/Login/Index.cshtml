@model User
@{
    ViewData["Title"] = "Авторизация";
}

<form method="post" asp-controller="Login" asp-action="Enter">
<div class="container">
    <h3 class="display-5 text-center">Вход</h3>
    <p></p>
    <div class="form-group col-md-3 mx-auto">
        <label asp-for="Login"></label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Логин" name="Login" required minlength="2" maxlength="25"/>
        <span asp-validation-for="Login"></span>
    </div>
    <p></p>
    <div class="form-group  col-md-3 mx-auto">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" id="exampleFormControlInput1" placeholder="Пароль" name="Password" required minlength="8"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div class="row  col-md-3 mx-auto">
        <div class="form-check col-1">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        </div>
        <div class="col">Запомнить меня?</div>
    </div>
    <p></p>
    <div class="col-md-1 mx-auto">
        <button type="submit" class="btn btn-outline-dark text-center" asp-controller="Login" asp-action="Enter">Войти</button>
    </div>
</div>
</form>
<p></p>
<div class="col-md-3 mx-auto">
    <a class="btn btn-light text-center" asp-controller="Login" asp-action="NewUser">Регистрация нового пользователя</a>
</div>



