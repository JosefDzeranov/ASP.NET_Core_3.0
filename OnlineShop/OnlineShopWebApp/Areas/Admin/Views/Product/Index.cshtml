@model List<Product>

<div class="row">
    @await Html.PartialAsync("AdminPanel")

    <div class="col-9">
        <a asp-area = "Admin" 
           asp-controller="Product" 
           asp-action="Add">Add new Product</a>

        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Cost, @Constants.Rub</th>
                </tr>
            </thead>

            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@(item.Id+1)</td>
                    <td>
                        <a style="color:black" 
                           asp-area=""
                           asp-controller="Product"
                           asp-action="Index"
                           asp-route-Id="@item.Id">@item.Name </a>
                    </td>

                    <td>@item.Cost</td>
                    <td>
                        <a style="color:blue" 
                           asp-area = "Admin" 
                           asp-controller="Product" 
                           asp-action="Edit" 
                           asp-route-productId="@item.Id">Edit</a>
                    </td>

                    <td>
                        <a class="btn btn-outline-dark btn-sm" 
                           asp-area = "Admin" 
                           asp-controller="Product" 
                           asp-action="Delete" 
                           asp-route-productId="@item.Id" role="button">Delete</a>
                    <td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>