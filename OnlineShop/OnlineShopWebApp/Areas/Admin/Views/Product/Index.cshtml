                <div class="row">
                    <div class="col">
                        <a href="/Admin/Product/AddProduct">Добавить новый продукт</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Название</th>
                                    <th>Цена (руб.)</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@(i + 1)</td>
