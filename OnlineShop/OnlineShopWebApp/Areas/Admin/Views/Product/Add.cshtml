@using OnlineShopWebApp.Models
@model Product

<form method="post">

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Название</label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Цена</label>
        <input type="number" class="form-control" asp-for="Price">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Описание</label>
        <input class="form-control" asp-for="Description">
        <span asp-validation-for="Description"></span>
    </div>
    <button type="submit" class="btn btn-outline-primary" asp-area="Admin" asp-controller="Product" asp-action="Add">Создать</button>
</form>