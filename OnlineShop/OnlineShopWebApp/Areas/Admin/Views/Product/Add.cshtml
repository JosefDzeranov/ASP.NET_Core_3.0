@using OnlineShopWebApp.Models
@using OnlineShopWebApp.Models.Attributes
@using OnlineShopWebApp.Areas.Admin.Models

@model AddProductViewModel

@{
    ViewData["Title"] = "Add product";
}
<div class="container align-content-center">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenuLeft")
        </div> 
        <div class="col-10 mx-auto">
            <h2>Add product</h2>
            <form asp-action="Add" asp-controller="Product" asp-area="Admin" enctype="multipart/form-data">
                <div class="validation" asp-validation-summary="All"></div>
                <input asp-for="Id" type="hidden" value="@Model.Id">
                <div class="mb-3">
                    <input class="form-control" type="file" multiple accept="image/*" asp-for="UploadedFiles" placeholder="Upload files" />
                </div>
                <div class="mt-3">
                    <label class="form-label text-muted" asp-for="Available">Available for sale</label>
                </div>
                <select class="col-2 mb-3 form-control form-control-sm" asp-for="Available">
                    <option value="true">Available</option>
                    <option value="false">Not available</option>
                </select>
                <div class="mb-3">
                    <input class="form-control" asp-for="NameEN" placeholder="Name in english" />
                    <span asp-validation-for="NameEN"></span>
                </div>
                <div class="mb-3">
                    <input class="form-control" asp-for="NameRU" placeholder="Название по-русски" />
                    <span asp-validation-for="NameRU"></span>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" rows="5" asp-for="DescriptionEN" placeholder="Description in english"></textarea>
                    <span asp-validation-for="DescriptionEN"></span>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" rows="5" asp-for="DescriptionRU" placeholder="Описание по-русски"></textarea>
                    <span asp-validation-for="DescriptionRU"></span>
                </div>
                <div class="mb-3">
                    <input class="form-control" type="number" asp-for="Cost" placeholder="Cost" />
                    <span asp-validation-for="Cost"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark btn-sm" asp-area="Admin" asp-controller="Product" asp-action="Add">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>