@model ProductViewModel

<form method="post" asp-action="EditProduct">
<div class="row">
	@await Html.PartialAsync("AdminMenu")


	<div class="col-9">
		<h3>Редактировать информацию о продукте</h3>

		<div class="validation" asp-validation-summary="All"></div>

		<input type="hidden" asp-for="Id"/>

		<input type="text" asp-for="Name"/>
		<span asp-validation-for="Name"></span><br />

		<input type="number" asp-for="Cost"/>
		<span asp-validation-for="Cost"></span><br />

		<input type="text" asp-for="Description"/>
		<span asp-validation-for="Description"></span><br />
		<br />
		<button type="submit" class="btn-outline-success"
		asp-area="Admin"
		asp-controller="Product"
		asp-action="Edit">Сохранить изменения</button>
	</div>
</div>
</form>