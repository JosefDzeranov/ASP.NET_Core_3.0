@using OnlineShopWebApp.Areas.Admin.Models

@model EditProductViewModel

@{
    ViewData["Title"] = "Edit product data";
}
<div class="container align-content-center">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminMenuLeft")
        </div>
        <div class="col-10 mx-auto">
            <h2>Edit product data</h2>
            <div class="validation" asp-validation-summary="All"></div>
            <form asp-controller="Product" asp-action="Edit" asp-area="Admin" enctype="multipart/form-data">
                <div class="validation" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <input asp-for="Id" type="hidden" value="@Model.Id">
                    <input asp-for="ImagePaths" type="hidden" value="@Model.ImagePaths">
                </div>
                <div class="col col-md-4">
                    @foreach (var imagePath in Model.ImagePaths)
                    {
                        <div class="mt-3">
                            <img class="img-thumbnail" src="@imagePath" width="200" alt="@Model.NameEN">
                        </div>
                    }
                </div>
                <div class="mt-3">
                    <label class="form-label text-muted" asp-for="Available">Available for sale</label>
                </div>
                <select class="col-2 mb-3 form-control form-control-sm" asp-for="Available">
                    <option value="true">Available</option>
                    <option value="false">Not available</option>
                </select>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="UploadedFiles">Upload new images</label>
                    <input class="form-control" type="file" multiple accept="image/*" asp-for="UploadedFiles" />
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="NameEN">Name in english</label>
                    <input class="form-control form-control-sm" asp-for="NameEN" value="@Model.NameEN">
                    <span asp-validation-for="NameEN"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="NameRU">Описание по-русски</label>
                    <input class="form-control form-control-sm" asp-for="NameRU" value="@Model.NameRU">
                    <span asp-validation-for="NameRU"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="DescriptionEN">Description in english</label>
                    <textarea class="form-control form-control-sm" rows="4" asp-for="DescriptionEN">@Model.DescriptionEN</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="DescriptionRU">Описание по-русски</label>
                    <textarea class="form-control form-control-sm" rows="4" asp-for="DescriptionRU">@Model.DescriptionRU</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="Cost">Cost</label>
                    <input class="form-control form-control-sm" type="number" asp-for="Cost" value="@Model.Cost">
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-outline-dark btn-sm" asp-area="Admin" asp-controller="Product" asp-action="Edit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>