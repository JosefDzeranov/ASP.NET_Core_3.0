@using OnlineShopWebApp
@model ProductViewModel
<form method="post" enctype="multipart/form-data">  


    <h2>Редактирование продукта</h2>



    <input type="hidden" value=@Model.Id name="Id" />

    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Cost"></label><br />
        <input asp-for="Cost" />
        <span asp-validation-for="Cost"></span>
    </div>
    <div>
        <label asp-for="Description"></label><br />
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <p>Загрузите изображение продукта:</p>
        <input type="file" name="UploadedFile" class="form-control">
    </div>



    <br />
    <button class="btn btn-dark" type="submit" asp-controller="Administration" asp-action="SaveEditedProduct">сохранить изменения</button>


</form>
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}