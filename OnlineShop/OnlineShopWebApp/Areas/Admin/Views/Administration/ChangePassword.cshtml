@model User
<form method="post">

    <h2>Смена пароля:</h2>

    <input type="hidden" value=@Model.Name name="Name" />
    <input type="hidden" value=@Model.LastName name="LastName" />
    <input type="hidden" value=@Model.Login name="Login" />
    <input type="hidden" value=@Model.Id name="Id" />

    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ConfirmedPassword"></label><br />
        <input asp-for="ConfirmedPassword"/>
        <span asp-validation-for="ConfirmedPassword"></span>
    </div><br />




    <button class="btn btn-dark" type="submit" asp-area="Admin" asp-controller="Administration" asp-action="SaveEditedUser">Изменить пароль</button>


</form> 

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}