@model EditRightsViewModel
<form method="post">
    <div>
        <h2>Текущие роли для пользователя @Model.UserName:</h2>
    </div>
     <input type="hidden" value=@Model.UserName name="UserName" />

    <div>
        @foreach (var role in Model.AllRoles)
        {
            if (Model.UserRoles.Contains(role))
            {
            
                <input class="form-check-input" name="userRolesViewModel[@role.Name]" type="checkbox" value="true" checked />
                <label class="form-check-label" for="flexCheckDefault"> @role.Name</label> <br />
        
            }
            else
            {
                <input class="form-check-input" name="userRolesViewModel[@role.Name]" type="checkbox" value="true" />
                <label class="form-check-label" for="flexCheckChecked">@role.Name</label> <br />
            }

        }
    </div>


    <button class="btn btn-dark" type="submit" asp-area="Admin" asp-controller="Administration" asp-action="EditRights">Сменить</button>


</form>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}