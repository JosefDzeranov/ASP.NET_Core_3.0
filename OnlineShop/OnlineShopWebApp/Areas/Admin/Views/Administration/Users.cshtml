@model List<User>

<div class="row">
    @await Html.PartialAsync("Menu")

    <div class="column">
        <table>
            <tr>
                <th>Список пользователей</th>
            </tr>
            <tr>

                <th>Логин (e-mail)</th>
                <th>Имя</th>
                <th>Фамилия</th>

            </tr>


            @if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                    <td><a class="text" href="/admin/administration/ShowUser/@Model[i].Id" role="button"> @Model[i].Login</a></td>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].LastName</td>
                    </tr>
                }
            }
            <tr> 
               
              
                <td><a class="btn btn-dark" asp-area="admin" asp-controller="administration" asp-action="AddNewUser" role="button" >Добавить нового пользователя </a></td>
            </tr>
         
        </table>
    </div>
</div>