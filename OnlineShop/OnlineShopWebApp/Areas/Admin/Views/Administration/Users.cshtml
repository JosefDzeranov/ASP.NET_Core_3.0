@using OnlineShop.Db.Models
@model List<UserViewModel>

<div class="row">
    @await Html.PartialAsync("Menu")

    <div class="column">
        <table>
            <tr>
                <th>Список пользователей</th>
            </tr>
            <tr>

                <th>Логин (e-mail)</th>
                <th>Имя</th>
                <th>Телефон</th>

            </tr>


            @if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td><a class="text" asp-area="Admin" asp-controller="Administration" asp-action="ShowUser" asp-route-name="@Model[i].Name" role="button"> @Model[i].Name</a></td>
                        
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Phone</td>
                    </tr>
                }
            }
            <tr>


                <td><a class="btn btn-dark" asp-area="admin" asp-controller="administration" asp-action="AddNewUser" role="button">Добавить нового пользователя </a></td>
            </tr>

        </table>
    </div>
</div>