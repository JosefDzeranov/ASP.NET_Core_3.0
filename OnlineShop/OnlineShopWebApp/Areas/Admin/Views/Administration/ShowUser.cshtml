@model UserViewModel

<div class="row">
    @await Html.PartialAsync("Menu")

    <div class="column">
        <table>
            <tr>
                <th><h2>Пользователь @Model.Login</h2></th>
            </tr>
            <tr>
                <td>Имя</td>
                <td>@Model.Name </td>
            </tr>
            <tr>
                <td>Телефон</td>
                <td>@Model.Phone </td>
            </tr>
            <tr>
                <td>Логин</td>
                <td>@Model.Login </td>
            </tr>




        </table>
        <br />

        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Действия</button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" asp-area="Admin" asp-controller="Administration" asp-action="ChangePassword" asp-route-name="@Model.Name"> Смена пароля</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Administration" asp-action="EditUser" asp-route-name="@Model.Name"> Редактирование данных</a>
            <a class="dropdown-item" asp-area="Admin" asp-controller="Administration" asp-action="EditUserRights" asp-route-id="@Model.Name">Права доступа </a>
            <a class="dropdown-item" data-toggle="modal" data-target="#deleteUserModal"> Удалить пользователя </a>
        </div>
        @await Html.PartialAsync("DeleteUser", Model)
    </div>
</div>