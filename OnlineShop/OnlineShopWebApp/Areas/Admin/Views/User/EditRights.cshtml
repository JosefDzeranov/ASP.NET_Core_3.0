@model OnlineShopWebApp.Areas.Admin.Views.User.EditRightsViewModel

<form method="post">
	<div class="row">
		@await Html.PartialAsync("AdminMenu")

		<div class="col-6">
			<h3>Список ролей для @Model.UserName</h3>
			<div class="row">
				<div class="col">
					@foreach (var role in Model.AllRoles)
					{
						<div>                        
							@if (Model.UserRoles.Contains(role))
							{
								<div class="form-check">
									<input class="form-check-input" name="userRolesViewModel" [@role.Name] type="checkbox" value="true" checked>
									<label class="form-check-label" for="flexCheckChecked"> @role.Name</label>
								</div>                                
							}
							else
							{
								<div class="form-check">
									<input class="form-check-input" name="userRolesViewModel[@role.Name]" type="checkbox" value="true">
									<label class="form-check-label" for="flexCheckChecked">@role.Name</label>
								</div>
							}                        
						</div>
					}
				</div>
				<button class="btn btn-dark" type="submit" asp-area="Admin" asp-controller="User" asp-action="EditRights" asp-route-userName="@Model.UserName">Сохранить</button>
			</div>
		</div>
	</div>
</form>