@using OnlineShopWebApp.Areas.Admin.Models

@model ChangePassword

@{
    ViewData["Title"] = "Изменение пароля";
}
<div class="container align-content-center">
    <div class="row">
        <div class="col-2">
            @await Html.PartialAsync("AdminPanel")
        </div>
        <div class="col-5">
            <h2>Change password</h2>
            <div class="validation" asp-validation-summary="All"></div>
            <form asp-controller="User" asp-action="ChangePassword" asp-area="Admin">
                <div class="validation" asp-validation-summary="All"></div>
                    <input name="Id" hidden value="@Model.Id" />
                    <input name="FirstName" hidden value="@Model.FirstName" />
                    <input name="LastName" hidden value="@Model.LastName" />
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="Password">Новый пароль</label>
                    <input class="form-control form-control-sm" type="password" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted" asp-for="ConfirmPassword">Подтвердите пароль</label>
                    <input class="form-control form-control-sm" type="password" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="mb-3">
                    <button class="btn btn-outline-dark btn-sm" type="submit" asp-area="Admin" asp-controller="User" asp-action="ChangePassword">Изменить пароль</button>
                </div>
            </form>
        </div>
    </div>
</div>