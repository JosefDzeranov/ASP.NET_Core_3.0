{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": //у каждого лога есть уровень логирования, здесь мы указываем какой минимальный уровень логирования мы поддерживаем 
    {
      "Default": "Information", // "Information" - означает вывод вообще всей информации. В продакшн обычно устанавливают уровень "warning" чтобы в логах были только ошибки и критические ошибки. При дебажинге ставится уровень "Debug"
      "Override": //указываем каого уровня ошибки нужно собирать у системы и микрософта
      {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": //говорит куда нужно записывать логи, которые собирает serilog
    [
      {
        "Name": "Console" //сначала в консоль
      },
      {
        "Name": "File", //потом в файл
        "Args": {
          "path": "A:\\Logs\\log.json", //указываем где будет хранится этот файл
          "rollinginterval": "Day", //это роллинг - интервал, через который создаётся новый файл, чтобы файлы не были слишком большими
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog" //указываем, что данные хранятся в json
        }
      }
    ],
    "Enrich": //указываем, что добавляем в файл
    [
      "ForomLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadld"
    ]
  }
}
