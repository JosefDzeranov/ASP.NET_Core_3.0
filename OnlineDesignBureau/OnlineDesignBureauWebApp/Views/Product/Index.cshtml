@model Product
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-6">@Model.Name - @Model.Description</h1>
</div>

<div class="row">
    <div class="col-8">
        <img class="card-img-top" src="/image/@Model.Images[0]">
    </div>
    <div class="col">
        <div class="card-body">
            <h5 class="japari_sans">Общая площадь:@Model.Square м.кв.</h5>
            <h5>Габариты: @Model.Length х @Model.Width м</h5>
            <h5>Стоймость проекта: @Model.Cost руб</h5>
            <a class="btn btn-dark" href="#" role="button">В корзину</a>
            <a class="btn btn-dark" href="#" role="button">В cравнение</a>
        </div>
    </div>
</div>

